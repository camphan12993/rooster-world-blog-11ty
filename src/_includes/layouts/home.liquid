---
layout: 'layouts/base'
---

<div class="container mx-auto py-8 px-6">
  <div class="md:w-1/2">
    <h1 class="uppercase my-6 font-bold text-5xl md:text-6xl text-blue-900">
      Rooster Blog
    </h1>
    <hr class="w-40 border-solid border-4 rounded border-blue-800" />
  </div>
</div>

<div class="container mx-auto p-10 flex flex-wrap">
  {% for item in collections.post %}
  <article class="sm:w-1/2 lg:w-1/3 px-3 mb-6">
    <div class="overflow-hidden rounded-lg mb-2 h-2/3">
      <img
        class="transition duration-300 transform w-full h-full object-cover object-center hover:scale-110"
        src="{{ item.data.image }}"
        alt=""
      />
    </div>
    <p class="uppercase text-orange-400 text-sm">{{ item.data.topic }}</p>
    <a class="block" href="{{ item.url }}">
      <h2 class="text-2xl hover:opacity-50 cursor-pointer">
        {{ item.data.title }}
      </h2>
    </a>
    <div>
      <a href="#" class="text-sm hover:opacity-75">{{ item.data.author }}</a>
      <span class="font-thin"> | </span>
      <span class="text-xs italic font-thin">{{ item.data.date | date }}</span>
    </div>
  </article>
  {% endfor %}
</div>
